<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shareicon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context=".MainAtv1">

    <Button
        android:id="@+id/button12"
        android:layout_width="205dp"
        android:layout_height="82dp"
        android:layout_marginStart="106dp"
        android:layout_marginBottom="26dp"
        android:backgroundTint="#45AEBC"
        android:onClick="addRoomToFB"
        android:text="Online Create"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,OnClick" />

    <Button
        android:id="@+id/button7"
        android:layout_width="210dp"
        android:layout_height="82dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#60D8E8"
        android:onClick="onClick"
        android:text="Practice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spAt1Level"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/button8"
        android:layout_width="205dp"
        android:layout_height="82dp"
        android:layout_marginStart="106dp"
        android:layout_marginBottom="93dp"
        android:backgroundTint="#45AEBC"
        android:onClick="joinClicked"
        android:text="Online Join"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="OnClick" />

    <Spinner

        android:id="@+id/spAt1Level"
        android:layout_width="227dp"
        android:layout_height="66dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="92dp"
        android:textAlignment="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/codeTextView"
        android:layout_width="158dp"
        android:layout_height="38dp"
        android:layout_marginStart="126dp"
        android:layout_marginBottom="26dp"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/button12"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/shareicon2"
        android:layout_width="56dp"
        android:layout_height="55dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="96dp"
        android:onClick="shareWithFriends"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/codeTextView"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        app:srcCompat="@drawable/shareiconpic" />

    <Button
        android:id="@+id/nextClick"
        android:layout_width="77dp"
        android:layout_height="44dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="30dp"
        android:backgroundTint="#45AEBC"
        android:onClick="clickToNext"
        android:text="join"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginBottom="30dp"
        android:ems="10"
        android:inputType="text"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>